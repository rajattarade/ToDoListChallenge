<%- include("partials/header.ejs") %>

<div class="row justify-content-center row-cols-1 row-cols-md-3 mb-3 mt-3 text-center">
    <div class="col align-items-center">
      <div class="card mb-4 rounded-3 shadow-sm">
        <div class="card-header py-3 text-bg-todo">
          <h4 class="my-0 fw-normal text-white">I know what we're going to do today!</h4>
        </div>
        <div class="card-body">
            <% if(currentpage === "/personal") { %> 
            <form action="/personal" method="POST">
            <% } else { %>
            <form action="/work" method="POST">
            <% } %>
            <input class="form-control" type="text" name="newItem" placeholder="Click to type...">
          </form>
          <ul class="list-unstyled mt-3 mb-4">
            <% if(locals.todo) { %> 
                <% todo.forEach(function(item) { %>
                <li class="card card-body">
                    <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label text-white strikethrough" for="flexCheckDefault">
                        <%= item %>
                    </label>
                  </div>
                </li>    
                <% }); %>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </div>

<%- include("partials/footer.ejs") %>